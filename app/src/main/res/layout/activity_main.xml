<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#fce292"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:background="#e6cc7e"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMART HOME"
            android:textAlignment="center"
            android:textColor="#f2f2f0"
            android:textSize="17pt"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lampu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginBottom="10dp"
        android:background="#e6cc7e"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/ic_launcher_lampu" />

            <Button
                android:id="@+id/onLampu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#42f54b"
                android:text="ON"
                android:textColor="#ffffff"
                android:textSize="10pt" />

            <Button
                android:id="@+id/offLampu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#f54242"
                android:text="OFF"
                android:textColor="#ffffff"
                android:textSize="10pt" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lampu"
        android:layout_marginBottom="10dp"
        android:background="#e6cc7e"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/ic_launcher_ac" />

            <Button
                android:id="@+id/onAc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#42f54b"
                android:text="ON"
                android:textColor="#ffffff"
                android:textSize="10pt" />

            <Button
                android:id="@+id/offAc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#f54242"
                android:text="OFF"
                android:textColor="#ffffff"
                android:textSize="10pt" />

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/desktop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ac"
        android:background="#e6cc7e"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@mipmap/ic_launcher_desktop" />

            <Button
                android:id="@+id/onDesktop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#42f54b"
                android:text="ON"
                android:textColor="#ffffff"
                android:textSize="10pt" />

            <Button
                android:id="@+id/offDesktop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#f54242"
                android:text="OFF"
                android:textColor="#ffffff"
                android:textSize="10pt" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>